<UserControl x:Class="$safeprojectname$.Windows.Preferences.SettingsControls.BooleanSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:$safeprojectname$.Windows.Preferences.SettingsControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400"
             FontSize="14" FontFamily="Consolas">
    <StackPanel>
        <TextBlock Text="{Binding FieldName, UpdateSourceTrigger=PropertyChanged}" Padding="4"/>
        <CheckBox IsChecked="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Content="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Margin="2 0"/>
        <Separator Margin="0 1"/>
    </StackPanel>
</UserControl>
